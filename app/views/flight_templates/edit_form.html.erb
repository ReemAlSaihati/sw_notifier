<h1>
  Edit flight #<%= @flight.id %>
</h1>

<hr>

<!-- Form flight start -->
<form action="/update_flight/<%= @flight.id %>" method="post">
<!-- Form flight end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @flight.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for departure start -->
  <div class="form-group">
    <label for="departure">
      Departure
    </label>

    <!-- Input for departure start -->
    <input type="text" id="departure" name="departure" class="form-control" value="<%= @flight.departure %>">
    <!-- Input for departure end -->
  </div>
  <!-- Label and input for departure end -->

  <!-- Label and input for status start -->
  <div class="form-group">
    <label for="status">
      Status
    </label>

    <!-- Input for status start -->
    <input type="text" id="status" name="status" class="form-control" value="<%= @flight.status %>">
    <!-- Input for status end -->
  </div>
  <!-- Label and input for status end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @flight.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for message_sent start -->
  <div class="form-check">
    <input type="hidden" value="0" name="message_sent">
    <!-- Input for message_sent start -->
    <input id="message_sent" class="form-check-input" name="message_sent" type="checkbox" value="1" <%= "checked" if @flight.message_sent %>>
    <!-- Input for message_sent end -->
    <label for="message_sent" class="form-check-label">
      Message sent
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
